<p id="notice"><%= notice %></p>

<h1><%= @people.model_name.human(count: 2) %></h1>

<table>
  <thead>
    <tr>
      <th><%= @people.human_attribute_name(:description) %></th>
      <th><%= @people.human_attribute_name(:url_image) %></th>
      <th><%= @people.human_attribute_name(:role_id) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.description %></td>
        <td><%= person.url_image %></td>
        <td><%= person.role %></td>
        <td><%= link_to t('links.show'), person %></td>
        <td><%= link_to t('links.edit'), edit_person_path(person) %></td>
        <td><%= link_to t('links.delete'), person, method: :delete, data: { confirm: t('message.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new.person'), new_person_path %>
