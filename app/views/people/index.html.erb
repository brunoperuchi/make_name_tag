<p id="notice"><%= notice %></p>

<h1><%= @people.model_name.human(count: @people.count) %></h1>

<table class="table table-striped table-hover align-middle">
  <thead>
    <tr>
      <th><%= @people.human_attribute_name(:description) %></th>
      <th><%= @people.human_attribute_name(:url_image) %></th>
      <th><%= @people.human_attribute_name(:role_id) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.description %></td>
        <td><%= person.url_image %></td>
        <td><%= person.role.description %></td>
        <td><%= link_to t('links.show'), person, class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to t('links.edit'), edit_person_path(person), class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to t('links.delete'), person, method: :delete, data: { confirm: t('message.confirm') }, class:"btn btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new.person'), new_person_path, class:"btn btn-primary" %>
<%= link_to t('links.back'), welcome_index_path, class:"btn btn-primary" %>
